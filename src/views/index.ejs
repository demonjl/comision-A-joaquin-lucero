<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="https://epica.educativa.org/archivos/logos/favicon.ico?t=1680560313" type="image/x-icon">

    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="css/global.css">

    <title>Foro EPICA</title>
</head>
<body>

    <div class="root">
        <header class="header z-3">
            <div class="header__container">
                <div class="header__logo">
                    <img src="https://epica.educativa.org/archivos/logos/EPICA1.png" alt="Logo EPICA" >
                </div>
                <div class="header__title">
                    <h1>Foro EPICA</h1>
                </div>
            </div>
        </header>

        <main class="main">

            <section class="s_publicaciones grid gap-3">
                <div class="s_publicaciones__header">
                    <h2>Publicaciones</h2>
                </div>
                <div class="">
                    <ul class="s_publicaciones__content">
                        <% publicaciones.forEach(publicacion => { %>
                            <li class="list_publicacion grid gap-3 border rounded-3 shadow-sm">
                                <div class="ratio ratio-1x1">
                                    <img src=<%= publicacion.img %> alt="portada del articulo" class="object-fit-cover w-100 h-100 rounded-top-3">
                                </div>
                                <div class="px-3 py-2 grid gap-3">
                                    <h4 class="list_publicacion_title"><%= publicacion.titulo %></h4>
                                    <div class="list_publicacion_description">
                                        <p><%= publicacion.descripcion %></p>
                                    </div>
                                    <span class="fw-medium"><%= publicacion.createdAt.getFullYear() %></span>
                                </div>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </section>

        </main>

        <footer>
            <p class="copy">@copyright 2023 - Joaquin Lucero</p>
        </footer>
        
        
    </div>

    <script src="js/publicaciones.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>