<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" href="https://epica.educativa.org/archivos/logos/favicon.ico?t=1680560313" type="image/x-icon">

    <!-- <script src="https://cdn.tailwindcss.com"></script> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="css/global.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <title>Foro EPICA | Joaquin Lucero</title>
</head>
<body>

    <div class="root">
        <%- include('components/Header.ejs') %>

        <main class="main">

            <section class="s_publicaciones grid gap-3">
                <div class="s_publicaciones__header d-flex justify-content-between align-items-center">
                    <h2 class="border-bottom py-1 border-info text-capitalize">Publicaciones</h2>
                    <div class="">
                        <button type="button" id="nueva-publicacion" class="btn btn-dark text-capitalize" data-bs-toggle="modal" data-bs-target="#modalPublicacion">Nueva publicacion</button>
                    </div>
                </div>
                <div class="">
                    <ul class="s_publicaciones__content">
                        <% publicaciones.forEach(publicacion => { %>
                            <li id="publicacion" data-id=<%= publicacion.id %> class="list_publicacion grid gap-3 border rounded-3 shadow-sm">
                                <div class="ratio ratio-4x3">
                                    <img src=<%= publicacion.img %> alt="portada del articulo" class="object-fit-cover w-100 h-100 rounded-top-3">
                                </div>
                                <div class="px-3 pt-2 pb-4 grid gap-3">
                                    <h4 class="list_publicacion_title"><%= publicacion.titulo %></h4>
                                    <div class="list_publicacion_description">
                                        <p><%= publicacion.descripcion %></p>
                                    </div>
                                    <span class="fw-medium"><%= publicacion.createdAt.getFullYear() %></span>
                                    <div class="d-flex gap-2 ">
                                        <button id="editar-publicacion" class="editar-publicacion btn btn-secondary text-capitalize" data-bs-toggle="modal" data-bs-target="#modalPublicacion">Editar</button>
                                        <button id="eliminar-publicacion" class="eliminar-publicacion btn btn-danger text-capitalize" data-bs-toggle="modal" data-bs-target="#modalPublicacion">eliminar</button>
                                    </div>
                                </div>
                                
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </section>
            
            <div class="modal fade" id="modalPublicacion" tabindex="-1" aria-labelledby="modalPublicacion" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h1 class="modal-title fs-5" id="modalPublicacionTitulo">Publicacion</h1>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="modalFormulario" class="grid gap-3">
                            <div class="grid gap-1">
                                <label for="titulo" class="form-label">Titulo</label>
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo de la publicacion">
                            </div>
                            <div class="grid gap-1">
                                <label for="descripcion" class="form-label">Descripcion</label>
                                <textarea class="form-control" id="descripcion" name="descripcion" rows="3" placeholder="Descripcion de la publicacion"></textarea>
                            </div>
                            <div class="grid gap-1">
                                <label for="img" class="form-label">Imagen</label>
                                <input type="text" class="form-control" id="img" name="img" placeholder="URL de la imagen">
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                              <button type="submit" id="btnGuardar" class="btn btn-primary">Guardar</button>
                            </div>
                        </form>
                    </div>
                  </div>
                </div>
              </div>

        </main>

        <%- include('components/Footer.ejs') %>
        
    </div>

    
    <script src="js/publicaciones.js"></script>
</body>
</html>